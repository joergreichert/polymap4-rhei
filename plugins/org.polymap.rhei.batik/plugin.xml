            themeId="org.polymap.rhei.batik.materialDesign"
            title="Batik">
      </branding>
   </extension>
   <extension
         point="org.polymap.rhei.batik.design">
      <design
            class="org.polymap.rhei.batik.engine.DefaultAppDesign"
            id="org.polymap.rhei.batik.DefaultAppDesign"
